<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.com.hansungquickseat.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/IDEdit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"

            android:background="@drawable/input_border"
            android:hint="학번"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/PWEdit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/IDEdit"
            android:layout_alignLeft="@id/IDEdit"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_border"
            android:hint="비밀번호"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ID"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/IDEdit"
            android:layout_alignBottom="@+id/IDEdit"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorBlack"
           />

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="PW"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/PWEdit"
            android:layout_alignBottom="@+id/PWEdit"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorBlack"
            />



    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
